# Frontend Dockerfile
FROM node:18-alpine as builder

WORKDIR /app

# 复制依赖清单并安装依赖（需要 devDependencies 以便运行 tsc）
COPY ame-frontend/package*.json ./
ENV NODE_ENV=development
RUN npm ci

# 复制代码并构建
COPY ame-frontend .
RUN npm run build

# 生产镜像
FROM nginx:alpine

# 复制构建产物
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制 nginx 配置
COPY deployment/docker/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
